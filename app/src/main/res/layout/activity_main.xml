<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.juanito.r2_pi0.MainActivity">

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="76dp"
        android:src="@drawable/shutdown"
        android:id="@+id/shutdown"
        android:layout_x="265dp"
        android:layout_y="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/stop"
        android:id="@+id/stop"
        android:layout_x="409dp"
        android:layout_y="250dp"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_below="@+id/forward"
        android:layout_toEndOf="@+id/shutdown"
        android:layout_marginStart="85dp"
        android:layout_marginTop="21dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_left"
        android:id="@+id/left"
        android:layout_alignTop="@+id/music"
        android:layout_toEndOf="@+id/shutdown" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_right"
        android:id="@+id/right"
        android:layout_alignTop="@+id/music"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/music"
        android:id="@+id/music"
        android:layout_x="102dp"
        android:layout_y="217dp"
        android:layout_marginStart="58dp"
        android:layout_alignTop="@+id/forward"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_up"
        android:id="@+id/forward"
        android:layout_x="409dp"
        android:layout_y="141dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/stop" />
</RelativeLayout>
