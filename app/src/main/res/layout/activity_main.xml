<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.juanito.r2_pi0.MainActivity">

    <com.example.juanito.r2_pi0.JoyStickView
        android:id="@+id/joy"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="bottom|right"
        app:padColor="#55ffffff"
        app:buttonColor="#55ff0000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/shutdown"
        android:id="@+id/shutdown"
        android:layout_x="265dp"
        android:layout_y="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_shape"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/vocal_control"
        android:id="@+id/vocal_control"
        android:layout_alignTop="@+id/music"
        android:layout_toEndOf="@+id/music"
        android:layout_marginStart="27dp"
        android:background="@drawable/round_shape"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/music"
        android:id="@+id/music"
        android:layout_x="102dp"
        android:layout_y="217dp"
        android:layout_marginStart="35dp"
        android:background="@drawable/round_shape"
        android:layout_below="@+id/shutdown"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/bluetooth"
        android:id="@+id/bluetooth"
        android:background="@drawable/round_shape"
        android:layout_alignTop="@+id/vocal_control"
        android:layout_alignStart="@+id/shutdown" />

</RelativeLayout>
